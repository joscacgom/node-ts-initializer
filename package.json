{
    "name": "node-ts-initializer",
    "version": "1.0.0",
    "description": "This is a initializer for a nodejs project with typescript",
    "main": "index.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:coverage": "jest --coverage",
        "build": "rimraf ./dist && tsc",
        "dev": "ts-node src/index.ts",
        "dev:watch": "tsnd --respawn --clear src/index.ts",
        "start": "npm run build && node dist/index.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.24",
        "jest": "^29.7.0",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "dotenv": "^16.4.5"
    }
}